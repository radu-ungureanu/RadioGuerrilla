<UserControl
    x:Class="RadioGuerrilla.PrivacyPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RadioGuerrilla"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border BorderBrush="#ED0F65" BorderThickness="1,0,0,0">
        <Grid Background="White" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Background="#ED0F65" Grid.Row="0">
                <Grid>
                    <Grid.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="50" />
                        </TransitionCollection>
                    </Grid.Transitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="40, 32, 17, 13">
                        <Button 
                            x:Name="BackButton" 
                            Margin="0,3,0,0" 
                            Style="{StaticResource BackButtonStyle}" 
                            Click="BackButton_Click"/>
                        <TextBlock 
                            Margin="10,10,0,0" 
                            FontFamily="Segoe UI" 
                            FontWeight="SemiLight" 
                            FontSize="24.6667" 
                            Text="Privacy Policy"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- CONTENT AREA -->
            <Grid Margin="40,30,25,10" VerticalAlignment="Top" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.Transitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromHorizontalOffset="120" />
                    </TransitionCollection>
                </Grid.Transitions>

                <TextBlock Grid.Row="0"
                    TextWrapping="Wrap" 
                    Style="{StaticResource SubtitleTextStyle}">
                    <Bold>1. Data collected:</Bold>
                </TextBlock>
                <TextBlock Grid.Row="1"
                    TextWrapping="Wrap" 
                    Style="{StaticResource SubtitleTextStyle}">
                    This application does not gather any information about you.
                </TextBlock>
                <TextBlock Grid.Row="2" Height="100"/>
                <TextBlock Grid.Row="3"
                    TextWrapping="Wrap" 
                    Style="{StaticResource SubtitleTextStyle}">
                    <Bold>2. Protecting data:</Bold>
                </TextBlock>
                <TextBlock Grid.Row="4"
                    TextWrapping="Wrap" 
                    Style="{StaticResource SubtitleTextStyle}">
                    This application does not collect or store any information.
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</UserControl>
